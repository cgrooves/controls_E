function draw_ball_beam(handles,flag)
	global R;
    global L;
    global theta_max;
    global theta_min;
    global z_min;
    global z_max;

    % Get input
    z = get(handles.z_slider,'Value')
    theta = get(handles.theta_slider,'Value');
    
    % Transform coordinates
    beam_pts = [0, L*cos(theta);
        0, L*sin(theta)];
    
    
    ball_pt = [z, R];
    
    % Draw beam and ball
    
    viscircles(ball_pt,R);
    line(handles.axes1,beam_pts(1,:),beam_pts(2,:))
    set(handles.axes1,'XLim',[-2*L, 2*L],'YLim',[-2*L,2*L]);
    
end